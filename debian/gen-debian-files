#!/bin/sh

[ $# -ne 1 ] && {
    echo "usage: `basename $0` build-root_dir" >&2
    exit 1
}
dir="$1"/debian

echo "gen-debian-files: running lsb_release -a"
lsb_release -a

# Set soversion depending on whether we are running on vivid (read it from SOVERSION-vivid)
# or wily (set it from the full version in VERSION).
distro=`lsb_release -c -s`
if [ "$distro" = "vivid" ]
then
    soversion=`cat "${dir}"/SOVERSION-vivid`

    qt_full_version=`cat "${dir}"/QT-VERSION-vivid`
else
    full_version=`cat "${dir}"/VERSION`
    major=`echo $full_version | cut -d'.' -f1`
    minor=`echo $full_version | cut -d'.' -f2`
    soversion="${major}.${minor}"

    qt_full_version=`cat "${dir}"/QT-VERSION`
fi

# For the qt library, the soversion is always <major>.<minor>, whether on vivid or later.
qt_major=`echo $qt_full_version | cut -d'.' -f1`
qt_minor=`echo $qt_full_version | cut -d'.' -f2`
qt_soversion="${qt_major}.${qt_minor}"

# Generate debian/control from debian/control.in, substituting the soversion for both libs.
# For wily onwards, we also add an entry for the vivid version to "Conflicts:" and "Replaces:".
cat >"${dir}"/control <<EOF
# This file is autogenerated. DO NOT EDIT!
#
# Modifications should be made to debian/control.in instead.
# This file is regenerated automatically in the clean target.
#
EOF
sed "s/@UNITY_SCOPES_SOVERSION@/${soversion}/" "${dir}"/control.in \
| sed "s/@UNITY_SCOPES_QT_SOVERSION@/${qt_soversion}/" >>"${dir}"/control
if [ "$distro" != "vivid" ]
then
    sed -i "Replaces: libunity-scopes0,/a\
\          libunity-scopes${so_version}," "${dir}"/control
    sed -i "Conflicts: libunity-scopes0,/a\
\           libunity-scopes${so_version}," "${dir}"/control
fi

# Generate the install files, naming them according to the soversion.

# Install file for binary package
cat >"${dir}"/libunity-scopes${soversion}.install <<EOF
# This file is autogenerated. DO NOT EDIT!
#
# Modifications should be made to debian/libunity-scopes.install.in instead.
# This file is regenerated automatically in the clean target.
#
EOF
cat "${dir}"/libunity-scopes.install.in >>"${dir}"/libunity-scopes${soversion}.install

# Install file for dev package
cat >"${dir}"/libunity-scopes-dev.install <<EOF
# This file is autogenerated. DO NOT EDIT!
#
# Modifications should be made to debian/libunity-scopes-dev.install.in instead.
# This file is regenerated automatically in the clean target.
#
EOF
sed "s/@UNITY_SCOPES_SOVERSION@/${soversion}/" "${dir}"/libunity-scopes-dev.install.in >>"${dir}"/libunity-scopes-dev.install

# Install file for click hook
cat >"${dir}"/libunity-scopes${soversion}.scope.click-hook <<EOF
# This file is autogenerated. DO NOT EDIT!
#
# Modifications should be made to debian/libunity-scopes.scope.click-hook.in instead.
# This file is regenerated automatically in the clean target.
#
EOF
cat "${dir}"/libunity-scopes.scope.click-hook.in >>"${dir}"/libunity-scopes${soversion}.scope.click-hook

# Symbols file for vivid or shlibs file for wily and later
if [ "$distro" = "vivid" ]
then
    sed "s/@UNITY_SCOPES_SOVERSION@/${soversion}/g" "${dir}"/libunity-scopes.symbols.in >>"${dir}"/libunity-scopes${soversion}.symbols
else
    cat >"${dir}"/shlibs <<EOF
# This file is autogenerated. DO NOT EDIT!
#
# Modifications should be made to debian/shlibs.in instead.
# This file is regenerated automatically in the clean target.
#
EOF
    sed "s/@UNITY_SCOPES_SOVERSION@/${soversion}/g" "${dir}"/shlibs.in \
    | sed "s/@UNITY_SCOPES_QT_SOVERSION@/${qt_soversion}/g" \
    | sed "s/@UNITY_SCOPES_FULL_VERSION@/${full_version}/g" \
    | sed "s/@UNITY_SCOPES_QT_FULL_VERSION@/${qt_full_version}/g" >>"${dir}"/shlibs
fi

# Install file for qt binary package
cat >"${dir}"/libunity-scopes-qt${qt_soversion}.install <<EOF
# This file is autogenerated. DO NOT EDIT!
#
# Modifications should be made to debian/libunity-scopes-qt.install.in instead.
# This file is regenerated automatically in the clean target.
#
EOF
cat "${dir}"/libunity-scopes-qt.install.in >>"${dir}"/libunity-scopes-qt${qt_soversion}.install

# Install file for qt dev package
cat >"${dir}"/libunity-scopes-qt-dev.install <<EOF
# This file is autogenerated. DO NOT EDIT!
#
# Modifications should be made to debian/libunity-scopes-qt-dev.install.in instead.
# This file is regenerated automatically in the clean target.
#
EOF
sed "s/@UNITY_SCOPES_QT_SOVERSION@/${qt_soversion}/" "${dir}"/libunity-scopes-qt-dev.install.in >>"${dir}"/libunity-scopes-qt-dev.install

# Qt symbols file for vivid
if [ "$distro" = "vivid" ]
then
    sed "s/@UNITY_SCOPES_QT_SOVERSION@/${qt_soversion}/g" "${dir}"/libunity-scopes-qt.symbols.in >"${dir}"/libunity-scopes-qt${qt_soversion}.symbols
fi

exit 0
