# Script to dump the current ABI.

libname=lib@UNITY_SCOPES_LIB@
libpath=@CMAKE_BINARY_DIR@/${libname}.so
cur_abi=@CMAKE_CURRENT_BINARY_DIR@/abi_dumps/${libname}/${libname}_@UNITY_SCOPES_FULL_VERSION@.dump

distro=$(lsb_release -c -s)
[ "$distro" = "vivid" ] && {
    touch ${cur_abi}
    exit 0
}

# Make a file containing the list of public headers.
dirs="scopes scopes/testing scopes/utility"
hdr_list=@CMAKE_CURRENT_BINARY_DIR@/headers.@UNITY_SCOPES_FULL_VERSION@
>$hdr_list
for d in $dirs
do
    ls @CMAKE_SOURCE_DIR@/include/unity/${d}/*.h >>$hdr_list
    ls @CMAKE_BINARY_DIR@/include/unity/${d}/*.h >>$hdr_list 2>/dev/null  # Not all subdirs use generated headers
done

# Dump the current ABI.
abi-dumper -skip-cxx -public-headers $hdr_list -lver @UNITY_SCOPES_FULL_VERSION@ ${libpath} -o ${cur_abi}

exit $?
